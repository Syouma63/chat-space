  .chat-main__message-form
    = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
      = f.text_field :content, class: 'message-footer-form', placeholder: 'type a message'
      = f.label :image, class: 'message-footer' do
        = icon('far', 'image', class: 'message-footer-icon')
        = f.file_field :image, class: 'footer-file'
      = f.submit 'Send', class: 'submit'



