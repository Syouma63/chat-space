.chat-main
  .chat-main__group-info
    .chat-main__header
      .chat-main__header__left
        %ul.chat-main__header__left__lists
          %li.chat-main__header__left__lists__1
            #{@group.name}
          %li.chat-main__header__left__lists__2
            Member：
            - @group.users.each do |u|
              =u.name
      .chat-main__header__right
        = link_to edit_group_path(@group), class: "chat-main__header__right__edit" do
          Edit

  .chat-main__message
    = render @messages
